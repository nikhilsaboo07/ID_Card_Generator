<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="11dp"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="SICSR"
            android:textColor="@color/black"
            android:textSize="70dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:text="Symbiosis Institute of Computer Studies and Research"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="101dp"
            android:layout_height="114dp"
            android:layout_gravity="right"
            android:src="@drawable/sicsr">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:text="Building Future Leaders for the IT Industry Worldwide"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:text="A constituent of Symbiosis International University Accredited by NAAC with 'A' grade"
            android:textColor="@color/black"
            android:textSize="13dp">

        </TextView>


        <ImageView
            android:id="@id/image"
            android:layout_width="108dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:src="@drawable/nikhil">
        </ImageView>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="Nikhil Saboo"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="15dp"
            android:text="20030121071"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text="BCA"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </androidx.cardview.widget.CardView>


</RelativeLayout>